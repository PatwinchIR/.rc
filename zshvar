# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# User configuration
export PATH="/usr/local/share/dotnet:/Users/Jim/.conda/bin:/Users/Jim/.local/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin/$HOME/.rvm/bin:$PATH"

# export MANPATH="/usr/local/man:$MANPATH"

export rc="${HOME}/.rc"

export code="${HOME}/Code"
export algo="${code}/algo"
export dev="${HOME}/dev"
export XDG_CONFIG_HOME="${HOME}/.config"
export config="${HOME}/.config"
export zsh="${HOME}/.zsh"
export zshrc="${HOME}/.zshrc"
export zshalias="${HOME}/.zsh/alias.zsh"
export zshvar="${HOME}/.zsh/variables.zsh"
export zshflags="${HOME}/.zsh/flags.zsh"
export vim="${config}/nvim"
export vimrc="${config}/nvim/init.vim"
export ipythonrc="${HOME}/.ipython/profile_default/ipython_config.py"
